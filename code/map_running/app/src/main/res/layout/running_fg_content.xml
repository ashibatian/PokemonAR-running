<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_blue"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">
        <RelativeLayout
            android:id="@+id/fg_running_status_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/fg_running_calculate"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/button_half_circle"
                android:text="计入成绩：0.00公里"
                />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/fg_running_topbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/fg_running_status_top"
            android:layout_marginTop="1dp"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/item_weixin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="自由跑"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/item_tongxunlu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:text="约束跑"
                android:textSize="15dp"/>
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/fg_running_mainViewPager"
            android:layout_below="@id/fg_running_topbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/fg_running_checkneighbour"
            android:layout_below="@id/fg_running_topbar"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/elf_4"/>

        <!--Button
            android:id="@+id/button3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/button_circle"
            android:text="开始跑步"
            android:visibility="visible"
            tools:text="testButton" /-->

        <TextView
            android:id="@+id/fg_running_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:textSize="40px"
            android:textStyle="bold"
            android:text="查看历史跑步记录"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>