<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/listview_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="2019.05.18 18:23:06"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="15sp"/>
        <RelativeLayout
            android:layout_width="980px"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_white">
            <LinearLayout
                android:id="@+id/listview_layout1"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/listview_head1"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"
                    android:text="跑步里程"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/listview_content1"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.16公里"
                    android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/listview_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/listview_layout1"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp">
                <TextView
                    android:id="@+id/listview_head2"
                    android:layout_marginLeft="20dp"
                    android:textColor="#999999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="跑步用时"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/listview_content2"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:16:52"
                    android:textSize="20sp"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_alignParentRight="true"
                android:layout_width="400px"
                android:layout_height="300px"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4CAF50"
                    android:textSize="16sp"
                    android:text="已完成"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>